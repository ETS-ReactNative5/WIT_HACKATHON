@model EduCarePortal.Models.TeacherStudentViewModel

@{
    ViewBag.Title = "Teacher Dashboard";
}

<h2>Hello Teacher !</h2>

<hr />
<div class="col-lg-12">
    <h3>
        Usefull Links
    </h3>
    <hr />
</div>
<div class="row">
    <div class="col-md-3">
        <div class="card border-primary mb-3" style="max-width:28rem;background-color: darkgrey;color: white;border-color: #fcff5e !important;background-color: #b7b36e;">
            <div class="card-body">
                <a href="https://www.indiafoodbanking.org/" target="_blank"><img src="~/Content/Images/middaymeal.jpg" style="width:235px;" /></a>
                @*<h4 class="card-title">Sample Link</h4>*@
                <br />
                <h4 class="card-text" style="text-align: center;">Social Responsibility</h4>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-primary mb-3" style="max-width:-webkit-fill-available;backgroundmin-height: 134px;olor: white;border-color: #fcff5e !important;background-color: #b7b36e;">
            <div class="card-body">
                <a href="https://www.labster.com/vr/" target="_blank"><img src="~/Content/Images/ArVr.gif" style="width: 347px;height: 119px;" /></a>
                @*<h4 class="card-title">Sample Link</h4>*@
                <br />
                <h4 class="card-text" style="text-align: center;">AR/VR labs for explaining concepts</h4>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-primary mb-3" style="max-width: -webkit-fill-available;background-color: darkgrey;color: white;border-color: #fcff5e !important;background-color: #b7b36e;">
            <div class="card-body">
                <a href="https://www.brainpop.com" target="_blank"><img src="~/Content/Images/BrainPOP.png" style="width: 345px;height: 146px;" /></a>
                @*<h4 class="card-title">Sample Link</h4>*@
                <br />
                <h4 class="card-text" style="text-align: center;">Create innovative content</h4>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="col-lg-12">
    <h3>
        Tutorials
    </h3>
    <hr />
</div>
<div class="row">
    @foreach (var item in Model.Tutorials)
    {
        <div class="col-md-2">
            <div class="card border-primary mb-3" style="max-width: 18rem;background-color: #4a6121;border-color: #86bc25 !important;color: white;min-height: 134px;">
                <div class="card-body">
                    <h4 class="card-title">@item.Subject</h4>

                    <p class="card-text">Tutorial Count: @item.TutotialCount</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="col-lg-12">
    <h3>
        Quizes
    </h3>
    <hr />
</div>
<div class="row">
    @foreach (var item in Model.Quizes)
    {
        <div class="col-md-2">
            <div class="card border-primary mb-3" style="max-width: 18rem;background-color: darkgrey;color: white;border-color: #316eff !important;background-color: #16546f;min-height: 134px;">
                <div class="card-body">
                    <h4 class="card-title">@item.Subject</h4>

                    <p class="card-text">Quiz Count: @item.QuizCount</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="col-lg-12">
    <h3>
        Reports
    </h3>
    <hr />
</div>
<div class="row">
    @foreach (var item in Model.Reports)
    {
        <div class="col-md-2">
            <div class="card border-primary mb-3" style="max-width: 18rem;background-color: darkgrey;color: white;border-color: #ec30e5 !important;background-color: #9a718e;min-height: 134px;">
                <div class="card-body">
                    <h4 class="card-title">@item.Subject</h4>

                    <p class="card-text">Report Count: @item.ReportCount</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />


