@model EduCarePortal.Models.TeacherStudentViewModel

@{
    ViewBag.Title = "Student Dashboard";
}

<h2>Hello Student !</h2>

<hr />
<div class="col-lg-12">
    <h3>
        Tutorials
    </h3>
</div>
<div class="row">
    @foreach (var item in Model.Tutorials)
    {
        <div class="col-md-2">
            <div class="card border-primary mb-3" style="max-width: 18rem;background-color: #4a6121;border-color: #86bc25 !important;color: white;">
                <div class="card-body">
                    <h4 class="card-title">@item.Subject</h4>

                    <p class="card-text">Tutorial Count: @item.TutotialCount</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="col-lg-12">
    <h3>
        Quizes
    </h3>
</div>
<div class="row">
    @foreach (var item in Model.Quizes)
    {
    <div class="col-md-2">
        <div class="card border-primary mb-3" style="max-width: 18rem;background-color: darkgrey;color: white;border-color: #316eff !important;background-color: #16546f;">
            <div class="card-body">
                <h4 class="card-title">@item.Subject</h4>

                <p class="card-text">Quiz Count: @item.QuizCount</p>
            </div>
        </div>
    </div>
    }
</div>
<hr />
<div class="col-lg-12">
    <h3>
        Reports
    </h3>
</div>
<div class="row">
    @foreach (var item in Model.Reports)
    {
        <div class="col-md-2">
            <div class="card border-primary mb-3" style="max-width: 18rem;background-color: darkgrey;color: white;border-color: #ec30e5 !important;background-color: #9a718e">
                <div class="card-body">
                    <h4 class="card-title">@item.Subject</h4>

                    <p class="card-text">Report Count: @item.ReportCount</p>
                </div>
            </div>
        </div>
    }
</div>
<script>
    window.watsonAssistantChatOptions = {
        integrationID: "cbb1310f-c9b4-4da1-ac2c-729b256a170a", // The ID of this integration.
        region: "eu-gb", // The region your integration is hosted in.
        serviceInstanceID: "5ad91973-9945-408b-9414-8da17b23cffe", // The ID of your service instance.
        onLoad: function (instance) { instance.render(); }
    };
    setTimeout(function () {
        const t = document.createElement('script');
        t.src = "https://web-chat.global.assistant.watson.appdomain.cloud/loadWatsonAssistantChat.js";
        document.head.appendChild(t);
    });
</script>