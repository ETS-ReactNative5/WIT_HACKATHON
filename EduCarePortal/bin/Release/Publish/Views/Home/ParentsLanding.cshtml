@model EduCarePortal.Models.ParentsViewModel

@{
    ViewBag.Title = "Parent Dashboard";
}

<h2>Hello Parents !</h2>

<hr />
<div class="col-lg-12">
    <h3>
        Students
    </h3>
</div>
<div class="row">
    @foreach (var item in Model.Students)
    {
        <div class="col-md-4">
            <div class="card border-primary mb-3" style="max-width: 30rem;background-color: #4a6121;border-color: #86bc25 !important;color: white;">
                <div class="card-body">
                    <h4 class="card-title">@item.FirstName @item.LastName</h4>
                    <p class="card-text">Email-ID: @item.Email</p>
                    <p class="card-text">Date of Birth: @item.DateOfBirth.ToShortDateString()</p>
                    <p class="card-text">Reports Count: @item.QuizResults.Count()</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="col-lg-12">
    <h3>
        Reports
    </h3>
</div>
<div class="row">
    @foreach (var item in Model.Reports)
    {
        <div class="col-md-2">
            <div class="card border-primary mb-3" style="max-width: 18rem;background-color: darkgrey;color: white;border-color: #316eff !important;background-color: #16546f;">
                <div class="card-body">
                    <h4 class="card-title">@item.Subject</h4>

                    <p class="card-text">Quiz Count: @item.ReportCount</p>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="col-lg-12">
    <h3>
        Usefull Links
    </h3>
    <hr />
</div>
<div class="row">
    <div class="col-md-2">
        <div class="card border-primary mb-3" style="max-width: 18rem;background-color: darkgrey;color: white;border-color: #fcff5e !important;background-color: #b7b36e">
            <div class="card-body">
                <h4 class="card-title">Sample Link</h4>
                <p class="card-text">Sample Description</p>
            </div>
        </div>
    </div>
</div>
<script>
    window.watsonAssistantChatOptions = {
        integrationID: "cbb1310f-c9b4-4da1-ac2c-729b256a170a", // The ID of this integration.
        region: "eu-gb", // The region your integration is hosted in.
        serviceInstanceID: "5ad91973-9945-408b-9414-8da17b23cffe", // The ID of your service instance.
        onLoad: function (instance) { instance.render(); }
    };
    setTimeout(function () {
        const t = document.createElement('script');
        t.src = "https://web-chat.global.assistant.watson.appdomain.cloud/loadWatsonAssistantChat.js";
        document.head.appendChild(t);
    });
</script>