<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Digital Education Platform</title>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
    @*@Scripts.Render("~/Scripts/jquery-ui-1.12.1.min.js")*@
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/googleapisfont.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>

<body id="page-top">
    <div id="wrapper">
        @if (Request.IsAuthenticated)
        {
            <!-- Start of Sidebar -->
            <ul class="nav navbar-nav bg-gradient-primary1 sidebar sidebar-dark accordion toggled" id="accordionSidebar">

                <!-- Sidebar - Brand -->
                <a class="sidebar-brand d-flex align-items-center justify-content-center" href="">
                    <div class="sidebar-brand-icon">
                        @*<span>
                                <img src="~/Content/Images/deloitte.png" width="170" srcset="~/Content/Images/deloitte.png 500w, ~/Content/Images/deloitte.png 976w" sizes="(max-width: 479px) 100vw, 196px" alt="" />
                            </span>*@
                    </div>
                </a>

                <!-- Divider -->
                <hr class="sidebar-divider d-none d-md-block">
                @if (Session["Role"].ToString() == "Student")
                {
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Home/Landing">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Lessons/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Tutorials</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Quizzes/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Quizes</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/QuizResults/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                }
                @if (Session["Role"].ToString() == "Teacher")
                {
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Home/Landing">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Lessons/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Tutorials</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Quizzes/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Quizes</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/QuizResults/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Home/DashBoard">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Meet Parents</span>
                        </a>
                    </li>
                }
                @if (Session["Role"].ToString() == "Parents")
                {
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Home/Landing">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/QuizResults/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Reports</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Home/DashBoard">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Meet Teacher</span>
                        </a>
                    </li>
                }
                @if (Session["Role"].ToString() == "Admin")
                {
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Home/Landing">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/User/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Registration</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Teachers/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
                            <span>Teachers</span>
                        </a>
                    </li>
                    <li class="nav-item  active1">
                        <a class="nav-link" href="/Students/Index">
                            <i class="fas fa-fw fa-tachometer-alt"></i>
